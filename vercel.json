{
    "version": 2,
    "builds": [
        {
            "src": "Backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "Backend/public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "Backend/server.js"
        },
        {
            "src": "/",
            "dest": "Backend/public/registration.html"
        },
        {
            "src": "/static/(.*)",
            "dest": "Backend/public/static/$1"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "Backend/public/$1"
        }
    ],
    "env": {
        "MONGODB_URI": "mongodb+srv://<your-username>:<your-password>@<your-cluster>.mongodb.net/medical-portal?retryWrites=true&w=majority"
    }
} 
